<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-13-02-germline-testing-transaction-xml"/>

	<url value="http://wildfhir.aegis.net/fhir/TestScript/connectathon-13-02-germline-testing-transaction-xml"/>
	<name value="FHIR Connectathon 13 - FHIR Genomics - Scenario 02 - Germline Testing using Transaction - XML"/>
	<status value="draft"/>
	<publisher value="Clinical Genomics Workgroup, AEGIS.net, Inc."/>
	<contact>
		<name value="Gil Alterovitz"/>
		<telecom>
			<system value="email"/>
			<value value="gilusa@gmail.com"/>
			<use value="work"/>
		</telecom>
	</contact>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<date value="2016-09-08"/>
	<description value="Create a genetic-profile-based Observation containing the Genomic Source Class extension with the germline value using a FHIR transaction operation. Read and verify the created Observation back from the server. Resource format is XML."/>
	<useContext>
		<coding>
			<system value="urn:iso:std:iso:3166"/>
			<code value="US"/>
			<display value="United States of America (the)"/>
		</coding>
	</useContext>
	<requirements value="Observation, Patient, Practitioner and Specimen - Create, Delete, Read and Search Operation"/>
	<copyright value="© Clinical Genomics Workgroup, © AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Observation, Patient, Practitioner and Specimen create, delete, read and search operations"/>
			<link value="http://hl7.org/fhir/http.html#create"/>
			<link value="http://hl7.org/fhir/http.html#delete"/>
			<link value="http://hl7.org/fhir/http.html#read"/>
			<link value="http://hl7.org/fhir/http.html#search"/>
			<link value="http://hl7.org/fhir/2016Sep/observationforgenetics.html"/>
			<conformance>
				<reference value="_reference/conformance/GermlineConformance.xml" />
			</conformance>
		</capability>
	</metadata>

	<fixture id="transaction-create">
		<resource>
			<reference value="_reference/resources/germline-transaction-create.xml"/>
		</resource>
	</fixture>

	<profile id="observation-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Observation"/>
	</profile>
	<profile id="observationforgenetics-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/observationforgenetics"/>
	</profile>
	<profile id="bundle-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
	</profile>

	<variable>
		<name value="createObservationId"/>
		<path value="Observation/id" />
		<sourceId value="transaction-response"/>
	</variable>
	<variable>
		<name value="searchParamObservationIdentifier"/>
		<path value="Observation/identifier/value" />
		<sourceId value="transaction-create" />
	</variable>
	<variable>
		<name value="createPatientId"/>
		<path value="Patient/id" />
		<sourceId value="transaction-response"/>
	</variable>
	<variable>
		<name value="searchParamPatientIdentifier"/>
		<path value="Patient/identifier/value" />
		<sourceId value="transaction-create" />
	</variable>
	<variable>
		<name value="createPractitionerId"/>
		<path value="Practitioner/id" />
		<sourceId value="transaction-response"/>
	</variable>
	<variable>
		<name value="searchParamPractitionerIdentifier"/>
		<path value="Practitioner/identifier/value" />
		<sourceId value="transaction-create" />
	</variable>
	<variable>
		<name value="createSpecimenId"/>
		<path value="Specimen/id" />
		<sourceId value="transaction-response"/>
	</variable>
	<variable>
		<name value="searchParamSpecimenIdentifier"/>
		<path value="Specimen/identifier/value" />
		<sourceId value="transaction-create" />
	</variable>

	<setup>
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="Observation"/>
				<description value="Use a conditional delete operation to insure the Observation does not exist on the server."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?identifier=${searchParamObservationIdentifier}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 204(No Content)."/>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="Specimen"/>
				<description value="Use a conditional delete operation to insure the Specimen does not exist on the server."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?identifier=${searchParamSpecimenIdentifier}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 204(No Content)."/>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="Patient"/>
				<description value="Use a conditional delete operation to insure the Patient does not exist on the server."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?identifier=${searchParamPatientIdentifier}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 204(No Content)."/>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="delete"/>
				</type>
				<resource value="Practitioner"/>
				<description value="Use a conditional delete operation to insure the Practitioner does not exist on the server."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?identifier=${searchParamPractitionerIdentifier}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 204(No Content)."/>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>
	</setup>

	<test id="Step1-CreateNewGermlineObservation">
		<name value="Step1-CreateNewGermlineObservation"/>
		<description value="Create a new Germline Observation in XML format where the server assigns the resource id using a FHIR transaction to create all supporting resources."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="transaction"/>
				</type>
				<accept value="xml"/>
				<contentType value="xml"/>
				<responseId value="transaction-response"/>
				<sourceId value="transaction-create"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the base FHIR Bundle profile."/>
				<validateProfileId value="bundle-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Bundle.type is transaction-response."/>
				<path value="/Bundle/type"/>
				<value value="transaction-response"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="search"/>
				</type>
				<resource value="Observation"/>
				<description value="Search for the created Germline Observation by the unique identifier."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="?identifier=${searchParamObservationIdentifier}"/>
				<responseId value="observation-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm one Observation resource returned. Warning only as the server may contain another matching Observation."/>
				<operator value="equals"/>
				<path value="/Bundle/total"/>
				<value value="1"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step2-ReadAndVerifyGermlineObservation">
		<name value="Step5-ReadAndVerifyGermlineObservation"/>
		<description value="Read and verify the contents of the created Germline Observation in XML format created in step 1."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="read"/>
				</type>
				<resource value="Observation"/>
				<description value="Read using params element"/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="/${createObservationId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Observation."/>
				<resource value="Observation"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the base FHIR Observation profile."/>
				<validateProfileId value="observation-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the FHIR Observation for Genetics profile."/>
				<validateProfileId value="observationforgenetics-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Observation resource contains the Germline extension value 'LA6683-2'."/>
				<operator value="equals"/>
				<path value="/Observation/extension[@url='http://hl7.org/fhir/StructureDefinition/observation-geneticsGenomicSourceClass']/valueCodeableConcept/coding/code"/>
				<value value="LA6683-2"/>
			</assert>
		</action>
	</test>
</TestScript>