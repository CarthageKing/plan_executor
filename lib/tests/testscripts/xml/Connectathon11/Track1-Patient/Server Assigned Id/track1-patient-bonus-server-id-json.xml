<TestScript xmlns="http://hl7.org/fhir">
	<id value="track1-patient-bonus-server-id-json"/>

	<url value="http://wildfhir.aegis.net/fhir/TestScript/track1-patient-bonus-server-id-json"/>
	<name value="FHIR Connectathon 11 - Track 1 - Patient - Register a new patient (Bonus)"/>
	<status value="draft"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<date value="2015-12-30"/>
	<description value="FHIR Connectathon 11 - Track 1 - Patient - JSON Format - Baseline (Bonus) tests to create, update, retrieve history and search a patient, with extensions and server assigned resource id."/>
	<useContext>
		<coding>
			<system value="urn:iso:std:iso:3166"/>
			<code value="US"/>
			<display value="United States of America (the)"/>
		</coding>
	</useContext>
	<requirements value="Patient Create, Read, Update, Delete, and History Instance Operations"/>
	<copyright value="Â© AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Patient create, read, update, delete, history-instance and search-type operations"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#create"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#read"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#update"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#delete"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#history"/>
			<link value="http://hl7.org/fhir/2016Jan/http.html#search"/>
			<link value="http://hl7.org/fhir/2016Jan/patient.html"/>
			<conformance>
				<reference value="/Connectathon11/Track1-Patient/_reference/conformance/PatientConformance.xml" />
			</conformance>
		</capability>
	</metadata>

	<fixture id="patient-create-bonus-PeterChalmers">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-create-bonus-PeterChalmers.json"/>
		</resource>
	</fixture>
	<fixture id="patient-create-bonus-PeterChalmers-min">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-create-bonus-PeterChalmers-min.json"/>
		</resource>
	</fixture>

	<fixture id="patient-update-bonus1-PeterChalmers">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-update-bonus1-PeterChalmers.json"/>
		</resource>
	</fixture>
	<fixture id="patient-update-bonus1-PeterChalmers-min">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-update-bonus1-PeterChalmers-min.json"/>
		</resource>
	</fixture>
	<fixture id="patient-update-bonus2-PeterChalmers">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-update-bonus2-PeterChalmers.json"/>
		</resource>
	</fixture>
	<fixture id="patient-update-bonus2-PeterChalmers-min">
		<resource>
			<reference value="/Connectathon11/Track1-Patient/_reference/resources/patient-update-bonus2-PeterChalmers-min.json"/>
		</resource>
	</fixture>

	<profile id="bundle-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
	</profile>
	<profile id="patient-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Patient"/>
	</profile>

	<variable>
		<name value="peterChalmersId"/>
		<path value="Patient/id" />
		<sourceId value="create-search-response"/>
	</variable>
	<variable>
		<name value="searchIdentifier"/>
		<path value="Patient/identifier/value"/>
		<sourceId value="patient-create-bonus-PeterChalmers"/>
	</variable>
	<variable>
		<name value="searchFamilyName"/>
		<path value="Patient/name/family"/>
		<sourceId value="patient-create-bonus-PeterChalmers"/>
	</variable>
	<variable>
		<name value="searchGivenName"/>
		<path value="Patient/name/given"/>
		<sourceId value="patient-create-bonus-PeterChalmers"/>
	</variable>

	<setup>
		<action>
			<operation>
				<type>
					<code value="delete"/>
				</type>
				<resource value="Patient"/>
				<description value="Use a conditional delete operation to insure the patient does not exist on the server."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?given=${searchGivenName}&amp;family=${searchFamilyName}"/>
			</operation>
		</action>
	</setup>

	<test id="Step1-RegisterNewPatient">
		<name value="Step1-RegisterNewPatient"/>
		<description value="Create a new patient, with extensions where the server assigns the resource id using JSON."/>

		<action>
			<operation>
				<type>
					<code value="create"/>
				</type>
				<accept value="json"/>
				<contentType value="json"/>
				<responseId value="create-bonus-response"/>
				<sourceId value="patient-create-bonus-PeterChalmers"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<code value="search"/>
				</type>
				<resource value="Patient"/>
				<description value="Search for the patient James Chalmers by the unique patient identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?identifier=${searchIdentifier}"/>
				<responseId value="create-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that bundle contains the created version of the patient."/>
				<minimumId value="patient-create-bonus-PeterChalmers-min"/>
			</assert>
		</action>
	</test>

	<test id="Step2a-Bonus1-UpdatePatient">
		<name value="Step2a-Bonus1-UpdatePatient"/>
		<description value="Update the patient's address city, the birth datetime extension remains unchanged."/>

		<action>
			<operation>
				<type>
					<code value="update"/>
				</type>
				<resource value="Patient"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${peterChalmersId}"/>
				<responseId value="update-bonus1-response" />
				<sourceId value="patient-update-bonus1-PeterChalmers"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<headerField value="Location"/>
				<operator value="notEmpty"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<code value="read"/>
				</type>
				<resource value="Patient"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${peterChalmersId}"/>
			</operation>
		</action>
		<action>
			<assert>
				<validateProfileId value="patient-profile"/>
				<warningOnly value="true"/>
			</assert>
		</action>		
		<action>
			<assert>
				<description value="Confirm that read returns updated version and that update did not delete previously created fields."/>
				<minimumId value="patient-update-bonus1-PeterChalmers-min"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that version of resource is greater than 1 after the update. Warning only as the server may not support versioning."/>
				<operator value="greaterThan"/>
				<path value="Patient/meta/versionId"/>
				<value value="1"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step2b-Bonus2-UpdatePatient">
		<name value="Step2b-Bonus2-UpdatePatient"/>
		<description value="Update the patient's birth datetime as an extension."/>

		<action>
			<operation>
				<type>
					<code value="update"/>
				</type>
				<resource value="Patient"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${peterChalmersId}"/>
				<responseId value="update-bonus2-response" />
				<sourceId value="patient-update-bonus2-PeterChalmers"/>
			</operation>
		</action>
		<action>
			<assert>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<headerField value="Location"/>
				<operator value="notEmpty"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<code value="read"/>
				</type>
				<resource value="Patient"/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${peterChalmersId}"/>
				<responseId value="read-update-bonus2-response"/>
			</operation>
		</action>
		<action>
			<assert>
				<validateProfileId value="patient-profile"/>
				<warningOnly value="true"/>
			</assert>
		</action>		
		<action>
			<assert>
				<description value="Confirm that read returns updated version and that update did not delete previously created fields."/>
				<minimumId value="patient-update-bonus2-PeterChalmers-min"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that version of resource is  greater than 2 after the update. Warning only as the server may not support versioning."/>
				<operator value="greaterThan"/>
				<path value="Patient/meta/versionId"/>
				<value value="2"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step3-PatientHistory">
		<name value="Step3-PatientHistory"/>
		<description value="Retrieve the patient's history."/>

		<action>
			<operation>
				<resource value="Patient"/>
				<description value="Retrieve the history for a single, known patient using the known identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${peterChalmersId}/_history"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is more than two records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="2"/>
				<warningOnly value="true"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that bundle contains the bonus 2 updated version of the patient."/>
				<minimumId value="patient-update-bonus2-PeterChalmers-min"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step4-PatientSearch">
		<name value="Step4-PatientSearch"/>
		<description value="Search for a patient with the name 'James Chalmers'."/>

		<action>
			<operation>
				<type>
					<code value="search"/>
				</type>
				<resource value="Patient"/>
				<description value="Search for the patient James Chalmers."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?given=${searchGivenName}&amp;family=${searchFamilyName}"/>
			</operation>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other patient records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
				<warningOnly value="true"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that bundle contains the most recent updated version of the patient."/>
				<minimumId value="patient-update-bonus2-PeterChalmers-min"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<teardown>
		<action>
			<operation>
				<type>
					<code value="delete"/>
				</type>
				<resource value="Patient"/>
				<params value="/${peterChalmersId}"/>
			</operation>
		</action>
	</teardown>
</TestScript>