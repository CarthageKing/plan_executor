<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="track9-patch-medicationstatement-json"/>

	<url value="http://wildfhir.aegis.net/fhir/TestScript/track9-patch-medicationstatement-json"/>
	<name value="FHIR Connectathon 11 - Track 9 - Patch - PATCH for MedicationStatement"/>
	<status value="draft"/>
	<publisher value="Cerner, AEGIS.net, Inc."/>
	<contact>
		<name value="Dennis Patterson"/>
		<telecom>
			<system value="email"/>
			<value value="dennis.patterson@cerner.com"/>
			<use value="work"/>
		</telecom>
	</contact>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<date value="2016-01-05"/>
	<description value="FHIR Connectathon 11 - Track 9 - Patch - Send PATCH to EHR /MedicationStatement resource using JSON Patch format to update the MedicationStatement.status."/>
	<useContext>
		<coding>
			<system value="urn:iso:std:iso:3166"/>
			<code value="US"/>
			<display value="United States of America (the)"/>
		</coding>
	</useContext>
	<requirements value="MedicationStatement Create and Patch Operations; Patient Search Operation"/>
	<copyright value="© Cerner 2015+, © AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Patient search operation"/>
			<link value="http://hl7.org/fhir/http.html#search"/>
			<conformance>
				<reference value="/Connectathon11/Track9-Patch/_reference/conformance/PatientSearchType.xml" />
			</conformance>
		</capability>
		<capability>
			<required value="true"/>
			<description value="MedicationStatement create and patch operations - patch is currently experimental so there is no formal definition within the conformance statement at this time."/>
			<link value="http://hl7.org/fhir/http.html#create"/>
			<link value="http://hl7.org/fhir/http.html#update"/>
			<conformance>
				<reference value="/Connectathon11/Track9-Patch/_reference/conformance/MedicationStatementCreate.xml" />
			</conformance>
		</capability>
	</metadata>

	<fixture id="medicationstatement-create">
		<resource>
			<reference value="/Connectathon11/Track9-Patch/_reference/resources/medicationstatement-create.json"/>
		</resource>
	</fixture>
	<fixture id="medicationstatement-patch">
		<resource>
			<reference value="/Connectathon11/Track9-Patch/_reference/resources/medicationstatement-patch.json"/>
		</resource>
	</fixture>

	<variable>
		<name value="patientId"/>
		<path value="Patient/id" />
		<sourceId value="patient-search-response"/>
	</variable>
	<variable>
		<name value="medicationStatementId"/>
		<path value="MedicationStatement/id"/>
		<sourceId value="medicationstatement-search-response"/>
	</variable>
	<variable>
		<name value="searchParamPatient"/>
		<path value="MedicationStatement/patient/reference" />
		<sourceId value="medicationstatement-create" />
	</variable>
	<variable>
		<name value="searchParamStatus"/>
		<path value="MedicationStatement/status" />
		<sourceId value="medicationstatement-create" />
	</variable>

	<test id="Step1-SearchForPatient">
		<name value="Step1-SearchForPatient"/>
		<description value="Search for a Patient on which to create a MedicationStatement."/>

		<action>
			<operation>
				<type>
					<code value="search"/>
				</type>
				<resource value="Patient"/>
				<description value="Search for the patient by name."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?name=Connectathon11"/>
				<responseId value="patient-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is JSON."/>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other Patient records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
	</test>

	<test id="Step2-Create-MedicationStatement">
		<name value="Step2-Create-MedicationStatement"/>
		<description value="Create a MedicationStatement for the Patient found in step 1."/>

		<action>
			<operation>
				<type>
					<code value="create"/>
				</type>
				<resource value="MedicationStatement"/>
				<accept value="json"/>
				<contentType value="json"/>
				<sourceId value="medicationstatement-create"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 201(CREATED)."/>
				<operator value="in"/>
				<responseCode value="200,201"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the HTTP Header Location is present. Warning only as the Location is not required on the response."/>
				<headerField value="Location"/>
				<operator value="notEmpty"/>
				<warningOnly value="true"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<code value="search"/>
				</type>
				<resource value="MedicationStatement"/>
				<description value="Search for the created MedicationStatement by the known unique identifier."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="?patient=${searchParamPatient}&amp;status=${searchParamStatus}"/>
				<responseId value="medicationstatement-search-response" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is JSON."/>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other MedicationStatement records returned."/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that bundle contains the created MedicationStatement. Warning only until this TestScript has been verified accurate."/>
				<operator value="equals"/>
				<path value="MedicationStatement/patient/reference"/>
				<value value="Patient/${patientId}"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>

	<test id="Step3-PatchMedicationStatement">
		<name value="Step3-PatchMedicationStatement"/>
		<description value="Update the MedicationStatement to a 'completed' status using PATCH"/>

		<action>
			<operation>
				<type>
					<code value="patch"/>
				</type>
				<resource value="MedicationStatement"/>
				<accept value="json"/>
				<contentType value="json_patch"/>
				<params value="/${medicationStatementId}"/>
				<sourceId value="medicationstatement-patch"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the patch operation is a replace."/>
				<direction value="request" />
				<path value="$[0].op"/>
				<value value="replace"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the patch is replacing the status element value."/>
				<direction value="request" />
				<path value="$[0].path"/>
				<value value="/status"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the patch is setting the status value to completed."/>
				<direction value="request" />
				<path value="$[0]/value"/>
				<value value="completed"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK) or 204(NO CONTENT)."/>
				<operator value="in"/>
				<responseCode value="200,204"/>
			</assert>
		</action>

		<action>
			<operation>
				<type>
					<code value="read"/>
				</type>
				<resource value="MedicationStatement"/>
				<description value="Read the patched MedicationStatement back to verify contents."/>
				<accept value="json"/>
				<contentType value="json"/>
				<params value="/${medicationStatementId}" />
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is JSON."/>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is MedicationStatement."/>
				<resource value="MedicationStatement"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that bundle contains the updated MedicationStatement. Warning only until this TestScript has been verified accurate."/>
				<operator value="equals"/>
				<path value="MedicationStatement/status"/>
				<value value="completed"/>
				<warningOnly value="true"/>
			</assert>
		</action>
	</test>
</TestScript>