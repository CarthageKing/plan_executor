    <!--     Search again and make sure the patient has been deleted.
          This time perform read by id using variable     -->
    <action>
      <operation>
        <type>
          <code value="read"/>
        </type>
        <resource value="Patient"/>
        <params value="/${V2}"/>
      </operation>
    </action>  
    <action>
      <assert>
        <responseCode value="410"/>
      </assert>
    </action>
  </test>
